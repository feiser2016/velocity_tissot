#!/sbin/sh

. "$env"

cd "$ramdisk_patch" && [ "$(ls)" ] || exit 0

# fix permissions of patch files
chmod -R 0755 .

find -type f \( \
	-name "*.rc" ! -name "ueventd.*" \
	\) -exec chmod 0750 {} \;

find -type f \( \
	-name "*.xml" -o -name "*.do" -o -name "*.pem" -o -name "*.vtab" -o \
	-name "fstab.*" -o -name "*.prop" -o -name "*_contexts" -o \
	-name "ueventd.*" -o -name "sepolicy" -o -name "sepolicy_version" \
	\) -exec chmod 0644 {} \;

overlay="$ramdisk/overlay"

print "Copying new files..."
cp -rd ./. "$ramdisk/"
mkdir -p "$overlay"
cp -rd ./. "$overlay/"
cp "$tmp/pronto_wlan.ko" "$overlay/"

import_rc "init.velocity.rc"
import_rc "init.spectrum.rc"

cp /system/init.rc "$overlay/"
insert_after_last "$overlay/init.rc" "import .*\.rc" "import /init.spectrum.rc"
insert_after_last "$overlay/init.rc" "import .*\.rc" "import /init.velocity.rc"

# silently fails if there's none
insert_after_last "$overlay/init.rc" "import .*\.rc" "import /init.magisk.rc"

# fix selinux denials for /init.*.sh
"$bin/magiskpolicy" --load "/system/sepolicy" --save "$overlay/sepolicy" \
"allow init rootfs file execute_no_trans" \
"allow toolbox device file { append ioctl write getattr create read open relabelfrom setattr }" \
"allow toolbox vendor_file file { relabelto mounton }" \
"allow toolbox rootfs file { getattr open read }" \
"allow toolbox toolbox capability { sys_admin sys_module }" \
"allow toolbox property_socket sock_file write" \
"allow toolbox default_prop property_service set" \
"allow toolbox init unix_stream_socket connectto" \
"allow toolbox init fifo_file { getattr write }" \
"allow toolbox device dir { write add_name }" \
"allow toolbox proc file { getattr open read }" \
"allow toolbox rootfs system module_load"

exit 0
